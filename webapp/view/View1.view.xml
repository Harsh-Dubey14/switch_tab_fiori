<mvc:View
  controllerName="tabtable1.controller.View1"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">

  <Page id="mainPage" title="Dashboard">
    <content>

      <!-- Tiles Container -->
      <FlexBox
        id="tileContainer"
        wrap="Wrap"
        justifyContent="Center"
        visible="{= ${view1>/pageState} === 'tiles' }">

        <GenericTile
          id="ledgerTile"
          class="sapUiTinyMargin"
          header="Ledger"
          press="onShowLedger">
          <TileContent id="ledgerTileContent">
            <ImageContent id="ledgerImageContent" src="sap-icon://ledger"/>
          </TileContent>
        </GenericTile>

        <GenericTile
          id="vendorTile"
          class="sapUiTinyMargin"
          header="Vendor Details"
          press="onShowVendorDetails">
          <TileContent id="vendorTileContent">
            <ImageContent id="vendorImageContent" src="sap-icon://supplier"/>
          </TileContent>
        </GenericTile>

      </FlexBox>

      <!-- Table Container -->
      <VBox id="tableVBox" visible="{= ${view1>/pageState} === 'table' }" class="sapUiSmallMargin">

        <!-- Back Button -->
        <Button
          id="backButton"
          text="Back"
          icon="sap-icon://nav-back"
          press="onNavBack"
          class="sapUiSmallMarginBottom" />

        <!-- Ledger Table -->
        <Table
          id="ledgerTable"
          visible="{= ${view1>/selectedTable} === 'ZLEDGERSet' }"
          items="{ path: 'pagination>/ledgerPageData' }">
          <columns>
            <Column><Text text="Vendor"/></Column>
            <Column><Text text="Name"/></Column>
            <Column><Text text="Obalance"/></Column>
            <Column><Text text="Debit"/></Column>
            <Column><Text text="Credit"/></Column>
            <Column><Text text="Cbalance"/></Column>
          </columns>
          <items>
            <ColumnListItem>
              <cells>
                <Text text="{pagination>Lifnr}"/>
                <Text text="{pagination>Name1}"/>
                <Text text="{pagination>Obalance}"/>
                <Text text="{pagination>Debit}"/>
                <Text text="{pagination>Credit}"/>
                <Text text="{pagination>Cbalance}"/>
              </cells>
            </ColumnListItem>
          </items>
        </Table>

        <!-- Vendor Table -->
        <Table
          id="vendorTable"
          visible="{= ${view1>/selectedTable} === 'ZVEND_DETAILSSet' }"
          items="{ path: 'pagination>/vendorPageData' }">
          <columns>
            <Column><Text text="Vendor"/></Column>
            <Column><Text text="Name"/></Column>
            <Column><Text text="Address"/></Column>
            <Column><Text text="GSTIN"/></Column>
            <Column><Text text="Amount"/></Column>
            <Column><Text text="Currency"/></Column>
            <Column><Text text="Status"/></Column>
          </columns>
          <items>
            <ColumnListItem>
              <cells>
                <Text text="{pagination>Lifnr}"/>
                <Text text="{pagination>Name}"/>
                <Text text="{pagination>Fulladdress}"/>
                <Text text="{pagination>STCD1}"/>
                <Text text="{pagination>Wrbtr}"/>
                <Text text="{pagination>Waers}"/>
                <Text text="{pagination>Status}"/>
              </cells>
            </ColumnListItem>
          </items>
        </Table>

        <!-- Pagination Buttons -->
        <HBox
          visible="{= ${view1>/selectedTable} !== '' }"
          justifyContent="Center"
          class="sapUiSmallMarginTop">
          <Button text="Previous" press="onPrevPage"/>
          <Text text="{view1>/currentPage} / {view1>/totalPages}" class="sapUiSmallMarginHorizontal"/>
          <Button text="Next" press="onNextPage"/>
        </HBox>

      </VBox>
    </content>
  </Page>
</mvc:View>
